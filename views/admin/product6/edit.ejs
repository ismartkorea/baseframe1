                        <option value="4" <%if(result.pDispOrderNo=="4") {%> selected <%}%>>4</option>
                        <option value="5" <%if(result.pDispOrderNo=="5") {%> selected <%}%>>5</option>
                        <option value="6" <%if(result.pDispOrderNo=="6") {%> selected <%}%>>6</option>
