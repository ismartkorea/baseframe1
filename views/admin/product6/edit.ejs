                        <option value="10" <%if(result.pDispOrderNo=="10") {%> selected <%}%>>10</option>
                        <option value="11" <%if(result.pDispOrderNo=="11") {%> selected <%}%>>11</option>
                        <option value="12" <%if(result.pDispOrderNo=="12") {%> selected <%}%>>12</option>
