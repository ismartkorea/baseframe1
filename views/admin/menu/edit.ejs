<% layout('../../admin/layout') -%>
<script type="text/javascript" src="/admin/vendor/jquery/jquery-1.11.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        // 전송 처리.
        $("#submitBtn").on('click', function() {

            $("#frm").attr("method", "post");
            $("#frm").attr("action","/admin/menu/edit");
            $("#frm").submit();
        });
        $("#prevBtn").on('click', function() {
            location.href = "/admin/menu";
        });
    });
</script>
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">메뉴 관리 화면</h1>
        </div>
        <form name="frm" id="frm" method="post" class="form-horizontal">
            <input type="hidden" id="menuNo" name="menuNo" value="<%=result.menuNo%>"/>
            <table class="table table-bordered">
                <tr>
                    <td>
                        <label for="menuNm">메뉴명</label>
                    </td>
                    <td>
                        <input type="text" name="menuNm" id="menuNm" class="form-control" value="<%= result.menuNm %>" size="80"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="writer">메뉴링크URL</label>
                    </td>
                    <td>
                        <input type="text" name="menuLink" id="menuLink" class="form-control" value="<%=result.menuLink%>" size="80"/>
                    </td>
                </tr>
            </table>
            <p class="form-group">
            <div class="col-sm-offset-2 col-sm-10 text-right">
                <input type="button" id="submitBtn" name="submitBtn" class="btn btn-default" value="전송"/>&nbsp;
                <input type="button" id="prevBtn" name="prevBtn" class="btn btn-default" value="이전화면"/>
            </div>
            </p>
        </form>
    </div>
</div>