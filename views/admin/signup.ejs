<script type="text/javascript">
    $(function() {

    });


    // 전송처리.
    var onSubmit = function() {
        var usrId = $.trim($("#usrId").val());
        var usrPwd = $.trim($("#usrPwd").val());
        var usrPwd2 = $.trim($("#usrPwd2").val());
        var usrEmail = $.trim($("#usrEmail").val());
        var usrName = $.trim($("#usrName").val());

        if (usrId == "") {
            alert("아이디는 필수 입력항목입니다.");
            $("#usrEmail").focus();

            return false;
        }

        if (usrPwd == "") {
            alert("패스워드는 필수 입력항목입니다.");
            $("#usrPwd").focus();

            return false;
        }

        if (usrPwd2 == "") {
            alert("패스워드 확인을 위해 입력하여 주세요.");
            $("#usrPwd2").focus();

            return false;
        }

        if (usrPwd != usrPwd2) {
            alert("비밀번호를 확인해주세요.");
            $("#usrPwd2").val("");
            $("#usrPwd2").focus();

            return false;
        }

        if (usrEmail == "") {
            alert("이메일은 필수 입력항목입니다.");
            $("#usrEmail").focus();

            return false;
        }

        if (usrName == "") {
            alert("이름은 필수 입력항목입니다.");
            $("#usrName").focus();

            return false;
        }

        $("#frm").attr("method", "post");
        $("#frm").attr("action", "/admin/signup");

        $("#frm").submit();
