<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">관리자 추가</h3>
                </div>
                <div class="panel-body">
                    <form role="form" id="frm" name="frm">
                        <fieldset>
                            <div class="form-group">
                                아이디  : <input class="form-control" placeholder="아이디" id="usrId" name="usrId" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                패스워드 : <input class="form-control" placeholder="패스워드" id="usrPwd" name="usrPwd" type="password" value="">
                            </div>
                            <div class="form-group">
                                패스워드 확인 : <input class="form-control" placeholder="패스워드" id="usrPwd2" name="usrPwd2" type="password" value="">
                            </div>
                            <div class="form-group">
                                이메일 : <input class="form-control" placeholder="이메일" id="usrEmail" name="usrEmail" type="text" value="">
                            </div>
                            <div class="form-group">
                                이름 : <input class="form-control" placeholder="이름" id="usrName" name="usrName" type="text" value="">
                            </div>
                            <div class="form-group">
                                <a href="/admin/login">로그인 화면</a>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <a href="javascript:onSubmit();" class="btn btn-lg btn-success btn-block">추가</a>
                        </fieldset>
                    </form>
                </div>
                <div id="msgDiv" style="text-align:center;color:red;"></div>
            </div>
        </div>
    </div>
</div>

