<% layout('../../admin/layout') -%>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        // console.
        console.log("on READY");
        $("#prevBtn").on('click', function() {
            location.href = '/admin/';
        });
        $("#newBtn").on('click', function () {
            location.href = '/admin/product3/new';
        });
        $("#loginBtn").on("click", function () {
            location.href = './login';
        });
        $("#logoutBtn").on("click", function () {
            location.href = '/login/logout';
        });
        $("#signupBtn").on("click", function () {
            location.href = '/signup';
        });
        $("#delBtn").on("click", function(e) {
            e.preventDefault();
            var chkVals = [];
            var chkLen = $("input:checkbox[name='chkBox']:checked").length;
            if(chkLen>0) {
                $("input[name=chkBox]:checkbox").each(function (idx, item) {
                    if ($(this).is(":checked")) {
                        chkVals.push($(item).val());
                    }
                });
            } else {
                alert("삭제할 상품을 선택하여 주세요!");
                return;
            }
            //$("#chkParams").val(chkVals);
            $.ajax({
                type : "post",
                url : "/admin/product3/delete",
                dataType : "json",
                data : {"dataList" : chkVals},
                success : function(data) {
                    if(data.result == "OK") {
                        callback();
                    }
                },
                error : function(request, status, error) {
                    console.log("Code :  " + request.status + "\n" +
                            "message : " + request.responseText + "\n" +
                            "error : " + error);
                }
            });
        });
        $("#allChkbox").on('click', function () {
            if ($(this).is(":checked")) {
                $("input[name=chkBox]:checkbox").each(function () {
                    $(this).prop("checked", true)
                });
            } else {
                $("input[name=chkBox]:checkbox").each(function () {
                    $(this).prop("checked", false)
                });
            }
        });
        // 검색 엔터키 이벤트 처리.
        $("#srchText").on("keypress", function(e) {
            if(e.which == 13) {
                $("#srchBtn").click();
                return false;
            }
        });
        // 검색버튼 이벤트 처리.
        $("#srchBtn").on("click", function(e) {
            e.preventDefault();
            var selectedVal = $("#srchType option:selected").val();
            var srchText = $("#srchText").val();
            // 전송 처리.
            $("#srchType").val(selectedVal);
            $("#srchText").val(srchText);
            $("#searchForm").attr("method","post");
            $("#searchForm").attr("action","/admin/product3/search");
            $("#searchForm").submit();
        });

        // 베스트 상품 등록.
        $("#saveBestBtn").on("click", function(e) {
            e.preventDefault();
            var chkVals = [];
            var chkLen = $("input:checkbox[name='chkBox']:checked").length;
            if(chkLen>0) {
                $("input[name=chkBox]:checkbox").each(function (idx, item) {
                    if ($(this).is(":checked")) {
                        chkVals.push($(item).val());
                    }
                });
            } else {
                alert("등록할 베스트 상품을 선택하여 주세요!");
                return;
            }
            //$("#chkParams").val(chkVals);
            $.ajax({
                type : "post",
                url : "/admin/product3/best/save",
                dataType : "json",
                data : {"dataList" : chkVals},
                success : function(data) {
                    if(data.result == "OK") {
                        callback();
                    }
                },
                error : function(request, status, error) {
                    console.log("Code :  " + request.status + "\n" +
                            "message : " + request.responseText + "\n" +
                            "error : " + error);
                }
            });
        });


    });
    // btn Event
    function onEdit(no) {
        location.href = '/admin/product3/edit/'+no;
    }
    // callback
    function callback() {
        location.href = "/admin/product3";
    }
</script>
